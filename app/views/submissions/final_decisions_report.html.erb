<div class="center">
    <h1><b><%= params[:recommendation] %></b> Submissions</h1>
</div>

</br>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Submission</th>
            <th scope="col">Reviewers Contact Info</th>
        </tr>
    </thead>

    <tbody>
        <% @final_decision_reviews.each do |review| %>
            <tr>
                <td><%= review.submission.title %></td>
                <td>
                    <% emails = "" %>
                    <% review.submission.reviewers.each_with_index do |reviewer_email, index|
                        emails += reviewer_email
                        if index != review.submission.reviewers.size - 1
                            emails += ", "
                        end
                    end %>
                    <button class="btn btn-sm btn-outline-primary" onclick="copyToClipboard('<%= emails %>')"><i class="fa fa-clipboard" aria-hidden="true"></i></button>
                    
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<script>
    function copyToClipboard(text) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val(text).select();
        document.execCommand("copy");
        $temp.remove();
        console.log(text)
    }
</script>