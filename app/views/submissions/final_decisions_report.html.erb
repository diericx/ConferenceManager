<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Contact Name</th>
            <th scope="col">Contact Email</th>
            <th scope="col">Organization</th>
        </tr>
    </thead>

    <tbody>
        <% @final_decision_reviews.each do |review| %>
            <tr class="row-proposal" onclick="window.location='/submissions/<%= review.submission.id %>'">
                <td><%= review.submission.title %></td>
                <td><%= review.submission.contact_name %></td>
                <td><%= review.submission.contact_email %></td>
                <td><%= review.submission.organization %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<script>
    function copyToClipboard(text) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val(text).select();
        document.execCommand("copy");
        $temp.remove();
        console.log(text)
    }
</script>