</br>

<div class="boxed"> 

  <div class="center">
    <h3><strong>Abstract</strong><h3>
  </div>

  </br>

  <p>
    <strong>Title:</strong>
    <%= @abstract_proposal.title %>
  </p>

  <p>
    <strong>Conference:</strong>
    <%= @conference_name %>
  </p>

  <p>
    <strong>Url:</strong>
    <a href="<%=@abstract_proposal.url%>"><%= @abstract_proposal.url %></a>
  </p>

  <% if is_admin?(current_user) %>
    <p>
      <strong>Contact Name:</strong>
      <%= @abstract_proposal.contact_name %>
    </p>

    <p>
      <strong>Contact Email:</strong>
      <%= @abstract_proposal.contact_email %>
    </p>

    <p>
      <strong>Organization:</strong>
      <%= @abstract_proposal.organization %>
    </p>
  <% end %>

  <p>
    <strong>Proposed Format:</strong>
    <%= @abstract_proposal.proposed_format %>
  </p>

  <% if is_admin?(current_user) %>
    <form action="<%= edit_abstract_proposal_path(@abstract_proposal) %>">
      <button type="submit" class="btn btn-success">Edit</button>  
    </form>
  <% end %>

</div>

</br>

<% if is_admin?(current_user) %>
  <div class="boxed"> 
    <div class="center">
      <h3><strong>Reviewers</strong><h3>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for reviewer in @reviewers do %>
          <tr>
            <td><%= User.find(reviewer.user_id).email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render '/abstract_reviewer_assignments/form', abstract_reviewer_assignment: AbstractReviewerAssignment.new, abstract_id: @abstract_proposal.id %>

  </div>
<% end %>

</br>

<% if @user_submitted_report.length >= 1 then %>
  <div class="boxed"> 
    <div class="center">
      <h3><strong>Your Report</strong><h3>
    </div>

    </br>

    <% @abstract_report = @user_submitted_report[0] %>
    <%= render '/abstract_reports/show', abstract_report: @abstract_report, abstract_proposal: @abstract_proposal %>
  </div>
<% else %>
  <div class="boxed">
    <div class="center">
      <h3><strong>Report</strong><h3>
    </div>

    </br>

    <%= render '/abstract_reports/form', abstract_report: @abstract_report %>
  </div>
<% end %>

</br>

<form action="<%= abstract_proposals_path %>">
  <button type="submit" class="btn btn-primary">Back</button>  
</form>
